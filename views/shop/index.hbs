
<div class="row">
    {{#each products}}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{this.imagePath}}"  class="img-responsive" alt="..." >
            <div class="caption">
                <h3>{{this.title}}</h3>
                <p class="discription">{{this.description}}</p>
                <div class="clearfix">
                    <div class="price pull-left">${{this.price}}</div>
                    <a href="#" class="btn btn-success pull-right" role="button">Add To Cart</a></div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
